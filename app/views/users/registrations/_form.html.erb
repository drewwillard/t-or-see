<% 
  resource ||= User.new
  resource_name ||= :user
%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3>Create an account</h3>
  
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: local_assigns[:email], readonly: local_assigns[:email].present? %>
  </div>

  <div>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<div>
  <%= link_to "Already have an account?", new_session_path(resource_name) %><br />
  <%= link_to "Use a different email", auth_path %>
</div> 